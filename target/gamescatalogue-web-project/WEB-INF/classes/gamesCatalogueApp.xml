<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="pcGame" class="by.teachmeskills.rakhubovski.yasyuchenya.gamescataloguewebapp.entity.PcGame"/>

    <bean id="genre" class="by.teachmeskills.rakhubovski.yasyuchenya.gamescataloguewebapp.entity.Genre"/>

    <bean id="publisher" class="by.teachmeskills.rakhubovski.yasyuchenya.gamescataloguewebapp.entity.Publisher"/>

    <bean id="genreRepository" class="by.teachmeskills.rakhubovski.yasyuchenya.gamescataloguewebapp.repository.GenreRepositoryImpl"/>

    <bean id="pcGameRepository" class="by.teachmeskills.rakhubovski.yasyuchenya.gamescataloguewebapp.repository.PcGameRepositoryImpl"/>

    <bean id="publisherRepository" class="by.teachmeskills.rakhubovski.yasyuchenya.gamescataloguewebapp.repository.PublisherRepositoryImpl"/>

    <bean id="genreService" class="by.teachmeskills.rakhubovski.yasyuchenya.gamescataloguewebapp.service.GenreServiceImpl">
        <constructor-arg ref="genreRepository"/>
    </bean>

    <bean id="pcGameService" class="by.teachmeskills.rakhubovski.yasyuchenya.gamescataloguewebapp.service.PcGameServiceImpl">
        <constructor-arg ref="pcGameRepository"/>
    </bean>

    <bean id="publisherService" class="by.teachmeskills.rakhubovski.yasyuchenya.gamescataloguewebapp.service.PublisherServiceImpl">
        <constructor-arg ref="publisherRepository"/>
    </bean>

</beans>